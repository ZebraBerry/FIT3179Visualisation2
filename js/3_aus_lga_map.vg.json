{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height":500,
  "params": [
    {
      "name": "YearSelection",
      "value": ["All"],
      "bind": {
        "input": "select",
        "options": [
          "All", "2015", "2016", "2017", "2018", "2019", "2020","2021", "2022"
        ],
        "name": "Year: "
      }
    },
        {
      "name": "Location",
      "value": [135, -28],
      "bind": {
        "input": "select",
        "options": [
          [135, -36],
          [144.3, -38.1],
          [144.9, -36.7],
          [147.1, -38.1]
        ],
        "labels": ["Australia", "Melbourne", "Sydney", "Brisbane", "Hobart", "Adelaide", "Perth", "Darwin"],
        "name": "Location: "
      }
    },
        {
      "name": "zoom_level",
      "value": 700,
      "bind": {
        "input": "range",
        "min": 1000,
        "max": 60000,
        "step": 100,
        "name": "Zoom: "
      }
    }
  ],
  

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ssmi0026/FIT3179Visualisation2/main/data/map/Australia_V2.json",
        "format": {"type": "topojson", "feature": "LGA_2023_AUST_GDA2020"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black",
        "strokeWidth": 0.1
      },
      "encoding": {"tooltip": {"field": "note"}},
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "Location"},
    "scale": {"expr": "zoom_level"}
  },
      "transform": [
        {
          "calculate": "'No information for ' + datum.properties.LGA_NAME23",
          "as": "note"
        }
      ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ssmi0026/FIT3179Visualisation2/main/data/lga%20year%20fatality%20rate.csv"
      },
      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Fatality Rate",
          "type": "quantitative",
          "scale": {"scheme": "purples", "domainMax": 1600}
        },
        "tooltip": [
          {
            "field": "National LGA Name 2021",
            "type": "nominal",
            "title": "LGA"
          },
          {"field": "Fatality Rate", "type": "quantitative", "format": ".2f"},
          {"field": "Fatalities", "type": "quantitative"},
          {"field": "Population", "type": "quantitative"},
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      },
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "Location"},
    "scale": {"expr": "zoom_level"}
  },
      "transform": [
        {
          "lookup": "National LGA Name 2021",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ssmi0026/FIT3179Visualisation2/main/data/map/Australia_V2.json",
              "format": {"type": "topojson", "feature": "LGA_2023_AUST_GDA2020"}
            },
            "key": "properties.LGA_NAME23"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == YearSelection"}
        
      ]
    }
  ],
  "config": {},
}
