{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 1000,
  "width": 1200,
  "params": [
    {
      "name": "Year_selection",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2022,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ssmi0026/FIT3179Visualisation2/main/data/map/Australia_V2.json",
        "format": {"type": "topojson", "feature": "LGA_2023_AUST_GDA2020"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black",
        "strokeWidth": 0.1
      },
      "encoding": {"tooltip": {"field": "note"}},
      "projection": {
        "parallels": [-16, -37],
        "rotate": [-134, 0, 0],
        "type": "conicEqualArea"
      },
      "transform": [
        {
          "calculate": "'No Fatalites or No Data for ' + datum.properties.LGA_NAME23",
          "as": "note"
        }
      ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ssmi0026/FIT3179Visualisation2/main/data/lga%20year%20fatality%20rate.csv"
      },
      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Fatality Rate",
          "type": "quantitative",
          "scale": {"scheme": "reds"}
        },
        "tooltip": [
          {
            "field": "National LGA Name 2021",
            "type": "nominal",
            "title": "LGA"
          },
          {"field": "Fatality Rate", "type": "quantitative"},
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      },
      "projection": {
        "parallels": [-16, -37],
        "rotate": [-134, 0, 0],
        "type": "conicEqualArea"
      },
      "transform": [
        {
          "lookup": "National LGA Name 2021",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ssmi0026/FIT3179Visualisation2/main/data/map/Australia_V2.json",
              "format": {"type": "topojson", "feature": "LGA_2023_AUST_GDA2020"}
            },
            "key": "properties.LGA_NAME23"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ]
    }
  ],
  "config": {}
}
