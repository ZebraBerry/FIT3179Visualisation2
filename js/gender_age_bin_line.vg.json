{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ssmi0026/FIT3179Visualisation2/main/data/fatalities.csv"
  },
  "width": 500,
  "height": 300,
  "transform": [
    {"filter": "datum.Gender !== 'Unknown' & datum.Age !== 'Unknown'"}
  ],
  "vconcat": [{
    "width": "container",
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {"field": "Age", "type": "quantitative", "scale": {"domain": [0, 100]}},
        "y": {"aggregate": "count", "type": "quantitative"},
        "color": {"field": "Gender", "type": "nominal"}
      }
    },
    {
      "mark": {"type": "point", "opacity": 1, "filled": true},
      "encoding": {
        "x": {"field": "Age", "type": "quantitative"},
        "y": {"aggregate": "count", "type": "quantitative"},
        "color": {"field": "Gender", "type": "nominal"}
      }
    }
  ]},
  {
    "width": "container",
    "height": 50,
  "mark": "bar",
  "encoding": {
    "x": {"field": "Age", "type": "quantitative", "scale": {"domain": [0, 100]}},
    "y": {"aggregate": "count", "type": "quantitative", "stack":  "normalize"},
    "color": {"field": "Gender"}
  }
  }
  ]
}
