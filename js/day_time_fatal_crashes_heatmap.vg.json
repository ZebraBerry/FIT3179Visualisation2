{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "250",
  "data": {
    "url": "https://raw.githubusercontent.com/ssmi0026/FIT3179Visualisation2/main/data/DayTimeFatalCrashes.csv"
  },
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "Time",
      "type": "ordinal",
      "title": "Time",
      "sort": [
        "12:00am",
        "01:00am",
        "02:00am",
        "03:00am",
        "04:00am",
        "05:00am",
        "06:00am",
        "07:00am",
        "08:00am",
        "09:00am",
        "10:00am",
        "11:00am",
        "12:00pm",
        "01:00pm",
        "02:00pm",
        "03:00pm",
        "04:00pm",
        "05:00pm",
        "06:00pm",
        "07:00pm",
        "08:00pm",
        "09:00pm",
        "10:00pm",
        "11:00pm"
      ]
    },
    "color": {
      "aggregate": "sum",
      "field": "Fatal Crashes",
      "type": "quantitative",
      "title": "Fatal Crashes",
      "scale": {
            "scheme": "purpleorange"
      }
      
    },
    "y": {
      "field": "Dayweek",
      "type": "ordinal",
      "title": "Day",
      "sort": [
        "Sunday",
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday"
      ]
    },
    "tooltip": [
          {"field": "Dayweek", "title": "Day Of Week"},
      {"field": "Time"},
      {"field": "Fatal Crashes", "aggregate":"sum", "title": "Fatal Crashes"}
      ]
  
  },
  "background": "antiquewhite"

}
